
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

// Функція для виведення масиву
void printArray(const vector<double>& arr) {
    for (double num : arr) {
        cout << num << " ";
    }
    cout << endl;
}

// Основна функція
int main() {
    const int SIZE = 20;
    vector<double> a(SIZE);

    // Заповнення масиву випадковими дійсними числами
    cout << "Початковий масив: ";
    for (int i = 0; i < SIZE; ++i) {
        a[i] = (rand() % 1000) / 100.0;  // Генеруємо випадкові дійсні числа в діапазоні від 0 до 9.99
    }
    printArray(a);

    // Розділення масиву на дві частини
    vector<double> part1, part2;
    for (double num : a) {
        if (static_cast<int>(num) <= 1) {
            part1.push_back(num);
        } else {
            part2.push_back(num);
        }
    }

    // Об'єднання частин масиву
    part1.insert(part1.end(), part2.begin(), part2.end());

    // Виведення перетвореного масиву
    cout << "Перетворений масив: ";
    printArray(part1);

    // Сортування масиву за зростанням
    sort(part1.begin(), part1.end());

    // Виведення відсортованого масиву
    cout << "Відсортований масив: ";
    printArray(part1);

    return 0;
}
